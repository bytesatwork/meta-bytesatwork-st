From: Daniel Ammann <daniel.ammann@bytesatwork.ch>
Date: Mon, 18 Mar 2024 14:02:27 +0100
Subject: [PATCH] dts: stm32mp1: Add support for byteDEVKIT STM32MP1

---
 core/arch/arm/dts/stm32mp15-pinctrl.dtsi          | 4 ++--
 core/arch/arm/dts/stm32mp157c-bytedevkit-v1-1.dts | 1 +
 core/arch/arm/dts/stm32mp157c-bytedevkit-v1-3.dts | 1 +
 3 files changed, 4 insertions(+), 2 deletions(-)
 create mode 120000 core/arch/arm/dts/stm32mp157c-bytedevkit-v1-1.dts
 create mode 120000 core/arch/arm/dts/stm32mp157c-bytedevkit-v1-3.dts

diff --git a/core/arch/arm/dts/stm32mp15-pinctrl.dtsi b/core/arch/arm/dts/stm32mp15-pinctrl.dtsi
index 90b055ce..ccc17e7b 100644
--- a/core/arch/arm/dts/stm32mp15-pinctrl.dtsi
+++ b/core/arch/arm/dts/stm32mp15-pinctrl.dtsi
@@ -8,13 +8,13 @@
 &pinctrl {
 	uart4_pins_a: uart4-0 {
 		pins1 {
-			pinmux = <STM32_PINMUX('G', 11, AF6)>; /* UART4_TX */
+			pinmux = <STM32_PINMUX('H', 13, AF8)>; /* UART4_TX */
 			bias-disable;
 			drive-push-pull;
 			slew-rate = <0>;
 		};
 		pins2 {
-			pinmux = <STM32_PINMUX('B', 2, AF8)>; /* UART4_RX */
+			pinmux = <STM32_PINMUX('H', 14, AF8)>; /* UART4_RX */
 			bias-disable;
 		};
 	};
diff --git a/core/arch/arm/dts/stm32mp157c-bytedevkit-v1-1.dts b/core/arch/arm/dts/stm32mp157c-bytedevkit-v1-1.dts
new file mode 120000
index 00000000..bbbe9cdc
--- /dev/null
+++ b/core/arch/arm/dts/stm32mp157c-bytedevkit-v1-1.dts
@@ -0,0 +1 @@
+stm32mp157c-dk2.dts
\ No newline at end of file
diff --git a/core/arch/arm/dts/stm32mp157c-bytedevkit-v1-3.dts b/core/arch/arm/dts/stm32mp157c-bytedevkit-v1-3.dts
new file mode 120000
index 00000000..bbbe9cdc
--- /dev/null
+++ b/core/arch/arm/dts/stm32mp157c-bytedevkit-v1-3.dts
@@ -0,0 +1 @@
+stm32mp157c-dk2.dts
\ No newline at end of file
